<h1>Applicants Page</h1>
<div class="insertForm">
    <h2>Add Applicant to Database:</h2>
    <form id="addApplicant" action="./applicants" method="POST">
        <label for="fname">First Name:</label>
        <br>
        <input type="text" name="fname" placeholder="first name" maxlength="100" required>
        <br>
        <label for="lname">Last Name:</label>
        <br>
        <input type="text" name="lname" placeholder="last name" maxlength="100" required>
        <br>
        <label for="email">Email:</label>
        <br>
        <input type="email" name="email" placeholder="email" maxlength="100" required>
        <br>
        <label for="phone">Phone Number:</label>
        <br>
        <input type="tel" name="phone" placeholder="XXX-XXX-XXX" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}">
        <br>
        <label for="address">Address:</label>
        <br>
        <input type="text" name="address" placeholder="street address" maxlength="256" required><br>
        <input type="text" name="city" placeholder="city" maxlength="100" required><br>
        <input type="text" name="state" placeholder="state (abbr)" placeholder="XX [A-Z, a-z]" pattern="[A-Za-z]{2}" required><br>
        <input type="text" name="country" placeholder="country (abbr)" pattern="[A-Za-z]{2}" required><br>
        <input type="text" name="zipCode" placeholder="zipcode" maxlength="16"><br><br>
        <input type="submit" value="submit">
    </form>
</div>
<div class="selectView">
    <h2>Select Applicant:</h2>
    <form id="filterApplicants" action="applicants.handlebars" method="GET">
        <h3>Filter Selection:</h3>
        <label for="filter">filter by:</label>
        <select name="filter" id="filter">
            <option value="fname">first name</option>
            <option value="lname">last name</option>
            <option value="email">email</option>
            <option value="phone">phone</option>
            <option value="address">first name</option>
        </select>
        <label for="input">Enter value:</label>
        <input type="text" name="input" placeholder="text here">
        <input type="submit" value="filter">
        
    </form>
    <table id="applicantTable">
        <tr>
            <th>applicant ID</th>
            <th>first name</th>
            <th>last name</th>
            <th>email</th>
            <th>phone</th>
            <th>address</th>
        </tr>
        {{#each rows}}
        <tr id={{this.applicantID}}>
            <td class="data">{{this.applicantID}}</td>
            <td class="data">{{this.firstName}}</td>
            <td class="data">{{this.lastName}}</td>
            <td class="data">{{this.email}}</td>
            <td class="data">{{this.phone}}</td>
            <td class="data">{{this.address}},{{this.city}} {{this.state}}, {{this.country}} {{this.zipCode}}</td>
            <td><a href="/applicantInfo/{{this.applicantID}}">Select</a></td>
            <td><button class='Update'>Edit</button></td>
            <td><button class='delete'>Delete</button></td>
        </tr>
        {{/each}}
    </table>
</div>

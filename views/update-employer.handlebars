<html>
  <h1>Update {{employers.businessName}}:</h1>
  
    <form id="update-employer" action="./Employers" method="post">
    
        Business Name: <input type="text" name="businessName" value="{{employers.businessName}}"><br>
        Email: <input type="text" name="email" value="{{employers.email}}"><br>
        Phone:  <input type = "text" name = "phone" value = "{{employers.phone}}"><br>
        Address: <input type = "text" name = "address" value  = "{{employers.address}}"><br>
        City: <input type = "text" name = "city" value = "{{employers.city}}"><br>
        State: <input type = "text" name = "state" value = "{{employers.state}}"><br>
        Country: <input type = "text" name = "country" value = "{{employers.country}}"><br>
        Zip Code: <input type = "text" name = "zipCode" value = "{{employers.zipCode}}"><br>
     
    </form>
  <button onclick="updateEmployer({{employers.employerID}})">Update</button>
  <script src="./public/javascript/updateEmployer.js"></script>
</html>
